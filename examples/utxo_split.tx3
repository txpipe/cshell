party Wallet;

tx utxo_split(
  input_utxo: UtxoRef,
  quantity: Int,
  // Received list of quantities and generate N outputs based on N quantities?
) {
  input source {
    from: Wallet,
    ref: input_utxo,
    min_amount: Ada(quantity) + fees,
  }

  output {
    to: Wallet,
    amount: Ada(quantity),
  }

  output change {
    to: Wallet,
    amount: source - Ada(quantity) - fees,
  }
}

